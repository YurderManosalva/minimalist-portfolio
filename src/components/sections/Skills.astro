---
import Section from "../Section.astro";
import { skills } from "@cv";
---

<Section title="Habilidades">
  <ul>
    {
      skills.map(({ name }) => {
        return (
          <li>
            <span>{name}</span>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    padding: 0;
    margin: 0;
    list-style: none;
  }

  li {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 0.3rem 0.7rem;
    font-size: 0.75rem;
    font-weight: 500;
    background: #1f2937;
    color: #ffffff;
    border-radius: 9999px; /* pill */
    border: 1px solid #374151;
  }

  li svg {
    width: 14px;
    height: 14px;
  }
</style>
