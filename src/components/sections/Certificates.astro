---
import Section from "../Section.astro";
import { certificates } from "@cv";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        return (
          <li>
              <article>
                <header>
                  <div>
                    <h3>
                      <a title={`Ver ${name}`} href={`${url}`} target="_blank">
                        {name}
                      </a>
                    </h3>
                    <h4>{issuer}</h4>
                  </div>

                  <time>{date}</time>
                </header>

                <footer>
                  <p>{url}</p>
                </footer>
              </article>
            </li>
        );
      })
    }
  </ul>
</Section>

<style>
   ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
