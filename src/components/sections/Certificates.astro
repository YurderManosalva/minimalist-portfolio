---
import Section from "../Section.astro";
import { certificates } from "@cv";
---

<Section title="Certificados">
  <ul>
    {
      certificates.map(({ name, date, issuer, url }) => {
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a title={`Ver ${name}`} href={`${url}`} target="_blank">
                      {name}
                    </a>
                  </h3>
                  <h4>{issuer}</h4>
                </div>

                <time>{date}</time>
              </header>

              <footer>
                <p>{url}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  :root {
    --c-h3: #111;
    --c-time: #555;
    --c-a: #111;
    --c-h4: #222;
  }

  html.dark {
    --c-h3: #ededed;
    --c-time: #9e9e9e;
    --c-a: #ededed;
    --c-h4: #cccccc;
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: var(--c-h3);
  }

  article a {
    color: var(--c-a);
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: var(--c-h4);
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 4px;
  }

  time {
    color: var(--c-time);
    font-size: 0.85rem;
    min-width: 102px;
    cursor: default;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
